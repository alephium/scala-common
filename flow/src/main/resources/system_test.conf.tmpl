  groups = 3

  clique {
    brokerNum = 3
  }

  broker {
    brokerId = 0
  }

  consensus {
    numZerosAtLeastInHash = 0
    blockTargetTime = 4 minutes
    blockConfirmNum = 2
    blockCacheSizePerChain = 2
  }

  mining {
